/* pages/tabBar/my/my.wxss */
.container {
    width: 100vw;
    height: 100vh;
    background-color: #EFEFEF;
}
.userInfoBox {
    width: 100vw;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-image: radial-gradient(#449fad, #badee4);
    border-radius: 0 0 20% 20%;
    padding-top: 3.5rem;
    padding-bottom: 2rem;
}

.userInfo {
    margin-left: 1.5rem;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.userName {
    margin-left: 1.5rem;
    font-size: 1.2rem;
    font-weight: bold;
}

.moreUserInfo {
    font-size: 2rem;
    margin-right: 1.5rem;
    color: #333;
}

.functionBox {
    margin: 1rem;
    padding: 1rem;
    background-color: #FFF;
    border-radius: 1.5rem;
    margin-top: 3rem;
    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.1);
}

.subFnBox {
    /* margin: 1rem;
    padding: 1rem; */
    /* width: 100%; */
    height: 2.5rem;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    /* background-color: #fff; */
    border-bottom: 1px dashed #DDD;
    padding-bottom: .25rem;
    margin-bottom: .25rem;
    margin-top: .5rem;
}

.textIcon{
    /* margin-left: 2rem; */
    /* background-color: coral; */
    line-height: 2.5rem;
}

.historyIcon {
    font-size: 1.2rem;
    color: #FF3E96;
}

.icon-color {
    color: #FF6A6A;
}

.teamIcon {
    font-size: 1.2rem;
    color: #89B0AE;
}

.textIcon > text {
    font-size: 1rem;
    /* font-weight: bold; */
    margin-left: .5rem;
}

.moreHistory {
    font-size: 1.5rem;
    color: #555;
}

