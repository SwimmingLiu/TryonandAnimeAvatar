.tabbar{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  background-color: #FFFFFF;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 128rpx;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.2);
  border-radius: 10% 10% 0 0;
}
.tabbar-item{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.common-icon{
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 5rpx;
}
.special-icon{
  position: absolute;
  top: -28rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border-top: 2rpx solid #f2f2f3;
  background-color: #FFFFFF;
  text-align: center;
  box-sizing: border-box;
  padding: 6rpx;
  margin-bottom: 5rpx;
}